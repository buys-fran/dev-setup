{:default true

  :alone 800
  :held 800
  :delay 300
  :sim 350
  :simlayer-threshold 350

  :froms {
    :-j {:key :j}
  }

  :tos {
    ;named symbols
    :open_brace {:key :open_bracket :modi :shift}
    :close_brace {:key :close_bracket :modi :shift}

    :open_paren {:key :9 :modi :shift}
    :close_paren {:key :0 :modi :shift}

    :less_than {:key :comma :modi :shift}
    :greater_than {:key :period :modi :shift}
  }

  :templates {
    :paste "osascript -e '
             set the clipboard to \"%s\"
             tell application \"System Events\"
                  keystroke \"v\" using command down
             end tell
           '"
  }

  ; To find the bundle id
  ;  osascript -e 'id of app "Some.app"'
  :applications {
    :iterm ["com.googlecode.iterm2"]
    :evernote ["com.evernote.Evernote"]
    :obsidian ["md.obsidian"]
  }

  :simlayers {
   :b-mode {:key :b}
   :d-mode {:key :d}
   :emoji-mode {:key :z}
   :q-mode {:key :q}
   :spacebar-mode {:key :spacebar}
   :t-mode {:key :t}
   :w-mode {:key :w}
  }

  :main [
    {:des "emoji"
     :rules [:emoji-mode
       [:equal_sign [:paste "👍"]]
       [:hyphen [:paste "👎"]]
       [:a [:paste "⚠️"]] ;alert
       [:b [:paste "🥦"]] ;alert
       [:c [:paste "✅"]] ;wave
       [:e [:paste "👀"]] ;eyes
       [:f [:paste "🔥"]] ;eyes
       [:i [:paste "🚧"]] ;eyes
       [:l [:paste "😂"]] ;lol
       [:m [:paste "💪"]] ;muscle
       [:n [:paste "👏"]] ;nice
       [:s [:paste "🙂"]] ;smile
       [:t [:paste "🙏"]] ;thanks
       [:w [:paste "👋"]] ;wave
       [:x [:paste "❌"]] ;wave
       [:y [:paste "🎉"]] ;Yay
       [:r [:paste "🚀"]] ;rocket
    ]}

    {:des "Tap caps => ESC, Hold caps => CTRL"
     :rules [
       [:caps_lock :left_control [:iterm] {:alone :escape}]
       [:caps_lock :left_control [:obsidian] {:alone :escape}]
    ]}
    {:des "Tap caps => ESC, Hold caps => CTRL"
     :rules [
       [:caps_lock :left_control [:iterm] {:alone :escape}]
       [:caps_lock :left_control [:obsidian] {:alone :escape}]
    ]}

    ; ITERM
    {:des "Key for Iterm"
     :rules [
       [:s :right_shift [:iterm] {:alone :s}]
       [:a :left_option [:iterm] {:alone :a}]
       [:s :right_shift [:obsidian] {:alone :s}]
       [:a :left_option [:obsidian] {:alone :a}]
       [:right_gui :right_gui [:iterm] {:alone :return_or_enter}]
    ]}

    {:des "D mode in iterm"
     :rules [:d-mode
       [:i :!TSi [:iterm]]
    ]}

    ; Easy middle of keyboard b
    {:des "B-mode mode in iterm"
     :rules [:b-mode
       [:1 [:!Ta :1] [:iterm]]
       [:2 [:!Ta :2] [:iterm]]
       [:3 [:!Ta :3] [:iterm]]
       [:4 [:!Ta :4] [:iterm]]
       [:5 [:!Ta :5] [:iterm]]
       [:6 [:!Ta :6] [:iterm]]
       [:backslash [:!Ta :backslash] [:iterm]]
       [:c [:!Ta :c] [:iterm]]
       [:d [:!Ta :d] [:iterm]]
       [:h [:!Ta :h] [:iterm]]
       [:hyphen [:!Ta :hyphen] [:iterm]]
       [:j [:!Ta :j] [:iterm]]
       [:k [:!Ta :k] [:iterm]]
       [:l [:!Ta :l] [:iterm]]
       [:open_bracket [:!Ta :open_bracket] [:iterm]]
       [:semicolon [:!Ta :semicolon] [:iterm]]
       [:x [:!Ta :x] [:iterm]]
       [:z [:!Ta :z] [:iterm]]
    ]}

    {:des "W mode in iterm"
     :rules [:w-mode
       [:h [:!Tw :left_arrow] [:iterm]]
       [:j [:!Tw :down_arrow] [:iterm]]
       [:k [:!Tw :up_arrow] [:iterm]]
       [:l [:!Tw :right_arrow] [:iterm]]
       [:comma [:!Tw :!Scomma] [:iterm]]
       [:period [:!Tw :!Speriod] [:iterm]]
    ]}

    {:des "Q mode in iterm"
     :rules [:q-mode
       [:h :left_arrow [:iterm]]
       [:j :down_arrow [:iterm]]
       [:k :up_arrow [:iterm]]
       [:l :right_arrow [:iterm]]
       [:y :!Tleft_arrow [:iterm]]
       [:u :!Tdown_arrow [:iterm]]
       [:i :!Tup_arrow [:iterm]]
       [:o :!Tright_arrow [:iterm]]
    ]}
  ]
}

